// Aplicação de PWM usando Led
// Código Feito para o ESP32
// Feito e testado no Simulador WOKWI 

#define Led 12


void setup() {

pinMode(Led, OUTPUT);

}

void loop() {


  for (int i = 0; i <= 255; i++) {

      analogWrite(Led, i);
      delay (15);
  }

  for (int i = 255; i >= 0; i--) {

      analogWrite (Led, i);
      delay (15);
      
  }


}